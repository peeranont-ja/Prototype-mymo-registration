<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymoregistration2ndedition.TermsAndConditionsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_31" />

    <ScrollView
        android:id="@+id/scroll_view_terms_and_conditions"
        android:layout_width="736dp"
        android:layout_height="392dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/border"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/terms_and_conditions_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="9dp"
                android:paddingLeft="40dp"
                android:paddingRight="37dp"
                android:paddingTop="10dp"
                android:text=""
                android:textColor="#707070"
                android:textSize="19dp" />

        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_arrow" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="536dp">

        <com.github.gcacace.signaturepad.views.SignaturePad
            android:id="@+id/signature_pad"
            android:layout_width="685dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/signature_pad_round_border_white"
            app:penColor="@android:color/black" />

        <TextView
            android:id="@+id/sign_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/signature_hint"
            android:lineSpacingExtra="9dp"
            android:paddingRight="120dp"
            android:paddingLeft="120dp"
            android:textAlignment="center"
            android:textColor="#99707070"
            android:textSize="24dp" />

        <LinearLayout
            android:id="@+id/eraser_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:padding="15dp"
            android:visibility="invisible"
            android:layout_marginRight="40dp">

            <ImageButton
                android:id="@+id/eraser_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="top"
                android:layout_marginBottom="2dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_eraser"
                android:tint="#707070" />

            <TextView
                android:id="@+id/eraser_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="3dp"
                android:gravity="bottom"
                android:text="ลบ"
                android:textColor="#707070"
                android:textSize="20sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/signature_pad_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="122dp"
        android:gravity="center"
        android:text="@string/accept_terms_ans_conditions_description"
        android:textColor="#707070"
        android:textSize="24dp"
        android:visibility="invisible" />

    <View
        android:id="@+id/btn_accept_bg"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_accept"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_round_transparent"
        android:text="@string/accept_button"
        android:textColor="#707070"
        android:textSize="24dp"
        android:visibility="invisible" />


</RelativeLayout>