<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:camerakit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymoregistration2ndedition.VerifyCustomerInfoActivity">

    <ImageView
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_82" />


    <TextView
        android:id="@+id/open_account_header"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:text="เปิดบัญชี"
        android:textColor="#707070"
        android:textSize="12sp"
        android:visibility="invisible" />


    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_arrow" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="44dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/circle_btn" />

    <Button
        android:id="@+id/btn_update_kyc"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="44dp"
        android:layout_marginTop="482dp"
        android:background="@drawable/circle_btn" />

    <LinearLayout
        android:id="@+id/kyc_show_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="130dp"
        android:layout_marginTop="521dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="อาชีพ"
                android:textColor="#898989"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/kyc_occupation_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/spinner_border"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/kyc_occupation"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

            </RelativeLayout>

            <TextView
                android:id="@+id/kyc_occupation_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="03 - พนักงานและลูกจ้างบริษัท"
                android:textColor="#898989"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="เงินเดือน/รายได้ต่อเดือน"
                android:textColor="#898989"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/kyc_income_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/spinner_border"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/kyc_income"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

            </RelativeLayout>

            <TextView
                android:id="@+id/kyc_income_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="10,001 - 20,000"
                android:textColor="#898989"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="แหล่งที่มาของเงินหรือรายได้"
                android:textColor="#898989"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/kyc_income_src_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/spinner_border"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/kyc_income_src"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

            </RelativeLayout>

            <TextView
                android:id="@+id/kyc_income_src_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="เงินเดือน"
                android:textColor="#898989"
                android:textSize="18sp"
                android:visibility="visible" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="แหล่งที่มาของเงินหรือรายได้จากประเทศ"
                android:textColor="#898989"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/kyc_income_src_country_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/spinner_border"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/kyc_income_src_country"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />

            </RelativeLayout>

            <TextView
                android:id="@+id/kyc_income_src_country_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="CN - จีน"
                android:textColor="#898989"
                android:textSize="18sp"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="center_vertical"
                android:text="การศึกษาสูงสุด"
                android:textColor="#898989"
                android:textSize="18sp" />


            <RelativeLayout
                android:id="@+id/kyc_education_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/spinner_border"
                android:visibility="invisible"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Spinner
                    android:id="@+id/kyc_education"
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog" />
            </RelativeLayout>

            <TextView
                android:id="@+id/kyc_education_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ปวท./ปวส./อนุปริญญา"
                android:textColor="#898989"
                android:textSize="18sp"
                android:visibility="visible" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/bg_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_18"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/btn_next"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#E6E6E6" />


    <Button
        android:id="@+id/btn_search"
        android:layout_width="65dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="211dp"
        android:animateLayoutChanges="true"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone" />

    <View
        android:id="@+id/bg_text"
        android:layout_width="478dp"
        android:layout_height="56dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="211dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/border"
        android:visibility="gone" />

    <EditText
        android:id="@+id/citizen_input"
        android:layout_width="478dp"
        android:layout_height="56dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="211dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/edittext_transaparent_bg_border"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="@string/search_id_description"
        android:inputType="number"
        android:maxLength="13"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_round_transparent"
        android:text="@string/next_button"
        android:textColor="#707070"
        android:textSize="20dp" />

    <View
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@android:color/white" />


</RelativeLayout>
