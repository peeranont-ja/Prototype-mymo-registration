<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymoregistration2ndedition.DepositOpenAccountActivity">

    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_59" />

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_arrow" />

    <View
        android:id="@+id/hide_background_button"
        android:layout_width="210dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="545dp"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="210dp"
        android:layout_height="63dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="545dp"
        android:background="@drawable/btn_round_transparent"
        android:text="ตกลง"
        android:textColor="#707070"
        android:textSize="24sp"
        android:visibility="visible" />

    <EditText
        android:id="@+id/deposit_amount_input"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@null"
        android:gravity="right"
        android:textSize="24sp"
        android:maxLength="10"
        />

</RelativeLayout>
