<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymoregistration2ndedition.TakePhotoIdCardActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_30" />

    <TextView
        android:id="@+id/open_account_header"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="48dp"
        android:background="@android:color/white"
        android:text="เปิดบัญชี"
        android:textColor="#707070"
        android:textSize="12sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/id_card"
        android:layout_width="495dp"
        android:layout_height="305dp"
        android:layout_marginTop="540dp"
        android:layout_toStartOf="@+id/btn_camera"
        android:background="@drawable/black_bg"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/id_card"
        android:layout_marginTop="200dp"
        android:layout_toEndOf="@+id/open_account_header"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.8"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:alpha="0.8"
            android:text="ใช้สำหรับการสมัคร MyMo เท่านั้น"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/register_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:alpha="0.8"
            android:text="31/12/1995"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/white"
        android:id="@+id/view" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_arrow" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="110dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="362dp"
        android:layout_marginRight="73dp"
        android:background="?android:attr/selectableItemBackground" />

    <!--<ImageView-->
    <!--android:id="@+id/imageView1"-->
    <!--android:layout_width="502.15dp"-->
    <!--android:layout_height="376.62dp"-->
    <!--android:scaleType="fitXY"-->
    <!--android:layout_marginLeft="90dp"-->
    <!--android:layout_marginTop="538dp"-->
    <!--android:background="@drawable/border"-->
    <!--&gt;-->
    <!--</ImageView>-->

    <Button
        android:id="@+id/btn_next"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_round_transparent"
        android:text="@string/next_button"
        android:textColor="#707070"
        android:textSize="20dp" />

    <View

        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@android:color/white" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center"
        android:alpha="0.8"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/logo_gsb"
        android:tint="#FFFFFF" />

</RelativeLayout>
