<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:camerakit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mymoregistration2ndedition.TakePhotoIdCardActivity">

    <ImageView
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_75" />


    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_arrow" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="642dp"
        android:layout_height="447dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="224dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rec_round_black_bg_border"
        android:scaleType="fitCenter"
        android:src="@drawable/black_bg" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="224dp">

        <!--<com.otaliastudios.cameraview.CameraView-->
            <!--android:id="@+id/camera"-->
            <!--android:layout_width="642dp"-->
            <!--android:layout_height="447dp"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:keepScreenOn="true" />-->

        <FrameLayout
            android:id="@+id/camera_preview"
            android:layout_width="642dp"
            android:layout_height="447dp"
            android:keepScreenOn="true" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="641dp"
            android:layout_height="447dp"
            android:layout_centerInParent="true"
            android:alpha="0.5"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/logo_gsb" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="132dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="152dp"
        android:background="?android:attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_round_transparent"
        android:text="@string/next_button"
        android:textColor="#707070"
        android:textSize="20dp"
        android:visibility="invisible" />

</RelativeLayout>
