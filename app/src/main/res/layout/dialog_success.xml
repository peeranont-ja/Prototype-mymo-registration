<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/register_mymo_successful"
        android:textAlignment="center"
        android:textColor="#2B2B2B"
        android:textSize="24sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="27dp"
        android:text="@string/success_description"
        android:textAlignment="center"
        android:textColor="#676767"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="45dp"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_register_mymo"
            android:layout_width="144dp"
            android:layout_height="138dp"
            android:background="@drawable/btn_round_transparent"
            android:text="สมัคร\nMyMoใหม่"
            android:textColor="#707070"
            android:textSize="18sp" />


        <View
            android:layout_width="33dp"
            android:layout_height="138dp" />


        <Button
            android:id="@+id/btn_main_menu"
            android:layout_width="144dp"
            android:layout_height="138dp"
            android:background="@drawable/btn_round_transparent"
            android:text="กลับสู่\nเมนูหลัก"
            android:textColor="#707070"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>