<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tngp17_001.mymoregistration.ui.VerifyCustomerInfoActivity">

    <ImageView
        android:id="@+id/bg_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background_17" />


    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="63dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_back_arrow" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="110dp"
        android:layout_height="94dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="362dp"
        android:layout_marginRight="73dp"
        android:background="?android:attr/selectableItemBackground" />

    <Button
        android:id="@+id/btn_query"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="44dp"
        android:layout_marginTop="151dp"
        android:background="@drawable/circle_btn" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="502.15dp"
        android:layout_height="376.62dp"
        android:layout_marginLeft="82.85dp"
        android:layout_marginTop="525dp"
        android:adjustViewBounds="true"
        android:background="@drawable/rec_round_gray_bg_border"
        android:scaleType="centerInside"
        android:src="@drawable/ic_id_card_white_128" />

    <!--<ImageView-->
    <!--android:id="@+id/imageView1"-->
    <!--android:layout_width="495dp"-->
    <!--android:layout_height="309dp"-->
    <!--android:scaleType="centerInside"-->
    <!--android:adjustViewBounds="true"-->
    <!--android:layout_marginLeft="90dp"-->
    <!--android:layout_marginTop="538dp"-->
    <!--android:background="@drawable/round_corner_rec_btn_transparent"-->
    <!--&gt;-->
    <!--</ImageView>-->

    <LinearLayout
        android:id="@+id/watermark_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="240dp"
        android:layout_marginLeft="200dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:alpha="0.8"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/logo_gsb"
            android:tint="#FFFFFF"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:alpha="0.8"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:alpha="0.8"
            android:text="ใช้สำหรับการสมัคร MyMo เท่านั้น"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/register_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:alpha="0.8"
            android:text="31/12/1995"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="334dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:background="@drawable/btn_round_transparent"
        android:text="ถัดไป"
        android:textColor="#707070"
        android:textSize="20sp"
        android:visibility="invisible" />


    <ImageView
        android:id="@+id/bg_query"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:scaleType="fitXY"
        android:src="@drawable/background_18"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_search"
        android:layout_width="65dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="211dp"
        android:animateLayoutChanges="true"
        android:background="?android:attr/selectableItemBackground"
        android:visibility="gone" />

    <View
        android:id="@+id/bg_text"
        android:layout_width="478dp"
        android:layout_height="56dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="211dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/border"
        android:visibility="gone" />

    <EditText
        android:id="@+id/citizen_input"
        android:layout_width="478dp"
        android:layout_height="56dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="211dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/edittext_transaparent_bg_border"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="ค้นหาด้วยหมายเลขบัตรประตัวจำประชาชน"
        android:inputType="number"
        android:maxLength="13"
        android:visibility="gone" />


</RelativeLayout>
